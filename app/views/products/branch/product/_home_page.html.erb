<%= link_to product_path(product.id) do %>
  <div class="col-sm-3 single-product-card" id=<%= product_path(product.id) %>>
    <div class="card">
      <div class="card-block">
        <h4 class="product-text">
          <%= truncate(product.name, :length => 60).capitalize %>
        </h4>
        <div class="product-content">
          <div class="producted-by">Created by <%= product.user.name %></div>
          <h3><%= product.name %></h3> 
          <p><%= product.description %></p>
        </div>
      </div>
    </div><!-- card -->
  </div><!-- col-sm-3 -->
<%end%>